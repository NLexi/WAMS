generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  ADMIN
  USER
  MANAGER
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  password     String
  role         Role
  name         String
  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId String?
  blogs        Blog[]
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  users       User[]
  permissions String
}

model Blog {
  id          String  @id @default(cuid())
  title       String
  content     String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}